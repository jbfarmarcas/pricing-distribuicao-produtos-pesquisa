{
  "name": "distribuicao-produtos-pesquisa",
  "version": "1.0.0",
  "description": "Sistema de distribuição de produtos para pesquisa de preços em rede de lojas",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@distribuicao/spa",
    "dev:core": "npm run dev --workspace=@distribuicao/core",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspace=@distribuicao/core",
    "test:watch": "npm run test:watch --workspace=@distribuicao/core",
    "test:coverage": "npm run test:coverage --workspace=@distribuicao/core"
  },
  "keywords": ["distribuição", "pesquisa", "preços", "otimização"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "typescript": "^5.9.3"
  }
}
